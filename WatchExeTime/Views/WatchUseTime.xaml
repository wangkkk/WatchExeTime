<Window x:Class="WatchExeTime.Views.WatchUseTime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchExeTime.Views"
        mc:Ignorable="d"
        Title="WatchUseTime" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="20">
            <Run Text="今天共使用"/>
            <Run Text="{Binding TodayTime,Converter={StaticResource SeCondTimeFormatConverter}}"/>
        </TextBlock>
    </Grid>
</Window>
